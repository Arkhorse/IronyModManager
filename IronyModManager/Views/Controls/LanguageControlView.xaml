<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="40"
             MaxWidth="200" MaxHeight="40" MinWidth="100"
             x:Class="IronyModManager.Views.Controls.LanguageControlView">
  <Panel>
    <DropDown Items="{Binding Languages}" SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" MinHeight="25" MinWidth="60">
      <DropDown.ItemTemplate>
        <DataTemplate>
          <DropDownItem IsSelected="{Binding IsSelected}" Content="{Binding Name}"></DropDownItem>
        </DataTemplate>
      </DropDown.ItemTemplate>
    </DropDown>
  </Panel>
</UserControl>
