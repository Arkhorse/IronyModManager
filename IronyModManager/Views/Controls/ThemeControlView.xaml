<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="40"                    
             MaxWidth="100" MaxHeight="40"
             x:Class="IronyModManager.Views.Controls.ThemeControlView">
  <Panel>
    <ToggleButton Content="{Binding Text}" IsChecked="{Binding ToggleDarkThemeEnabled}" Command="{Binding ToggleTheme}"></ToggleButton>
  </Panel>
</UserControl>