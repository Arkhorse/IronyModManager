<Styles xmlns="https://github.com/avaloniaui">
  <Style Selector="ButtonSpinner:pointerover /template/ Border#border">
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderHighBrush}" />
  </Style>
  <Style Selector="ButtonSpinner:focus /template/ Border#border">
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderHighBrush}" />
  </Style>
  <Style Selector="ButtonSpinner:error /template/ Border#border">
    <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
  </Style>
  <Style Selector="ButtonSpinner">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderMidBrush}" />
  </Style>
  <Style Selector="ButtonSpinner /template/ RepeatButton:pointerover">
    <Setter Property="Background" Value="{DynamicResource GreyDarken1Brush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken1Brush}" />
  </Style>
  <Style Selector="ButtonSpinner /template/ RepeatButton">
    <Setter Property="Background" Value="{DynamicResource GreyDarken3Brush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken3Brush}" />
  </Style>

</Styles>