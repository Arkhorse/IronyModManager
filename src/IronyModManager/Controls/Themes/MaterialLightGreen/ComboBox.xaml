<Styles xmlns="https://github.com/avaloniaui">
  <Style Selector="ComboBox">
    <Setter Property="Foreground" Value="{DynamicResource IronyForegroundColor}" />
    <Setter Property="Background" Value="Transparent" />
  </Style>
  <Style Selector="ComboBox:pointerover /template/ Border#border">
    <Setter Property="BorderBrush" Value="{DynamicResource LightGreenBrush}" />
  </Style>
  <Style Selector="ComboBox /template/ ToggleButton">
    <Setter Property="Foreground" Value="{DynamicResource LightGreenBrush}" />
  </Style>
  <Style Selector="ComboBox /template/ ToggleButton:checked">
    <Setter Property="Foreground" Value="White" />
  </Style>
</Styles>