<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             MinWidth="800" MinHeight="450"
             x:Class="IronyModManager.Views.MainConflictSolverControlView">
  <Panel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid RowDefinitions="4*,6*,1*" ColumnDefinitions="3*,7*">
      <TreeView Items="{Binding HierarchalConflicts}" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3">        
        <TreeView.DataTemplates>
          <TreeDataTemplate ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Name}"></TextBlock>
          </TreeDataTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Name}"></TextBlock>
          </DataTemplate>
        </TreeView.DataTemplates>
      </TreeView>
      <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding MergeViewer}"></ContentControl>
      <Button Grid.Row="2" Grid.Column="1" Content="{Binding Back}" Command="{Binding BackCommand}"
          VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,0"></Button>
    </Grid>
  </Panel>
</UserControl>