<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="30"
             MinWidth="30"
             x:Class="IronyModManager.Views.Controls.SortOrderControlView">
  <Panel>
    <Button Command="{Binding SortCommand}" Background="Transparent" BorderThickness="0" Margin="0,-5,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <TextBlock Text="{Binding SortOrderText}"
                   Foreground="{DynamicResource IronyAccentBrush}" TextWrapping="Wrap" FontSize="18"
                   VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,0,4"></TextBlock>
        <TextBlock Text="{Binding Text}" Foreground="{DynamicResource IronyForegroundBrush}" Margin="5,0,0,0"
                   TextWrapping="Wrap" VerticalAlignment="Center"></TextBlock>
      </StackPanel>      
    </Button>
  </Panel>
</UserControl>