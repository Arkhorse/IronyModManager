<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="30"
             MinWidth="30"
             x:Class="IronyModManager.Views.Controls.SortOrderControlView">
  <Panel>
    <Button Command="{Binding SortCommand}" Background="Transparent" BorderThickness="0" Margin="0,-5,0,0">
      <DockPanel LastChildFill="False">
        <TextBlock Text="{Binding SortOrderText}"
                   Foreground="{DynamicResource IronyThemeSortArrow}" TextWrapping="Wrap" 
                   DockPanel.Dock="Left" VerticalAlignment="Center" FontWeight="UltraBold"></TextBlock>
        <TextBlock Text="{Binding Text}" Foreground="{DynamicResource IronyForegroundBrush}" Margin="5,0,0,0"
                   TextWrapping="Wrap" DockPanel.Dock="Right" VerticalAlignment="Center"></TextBlock>
      </DockPanel>
    </Button>
  </Panel>
</UserControl>