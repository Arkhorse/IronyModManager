<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="40"
             x:Class="IronyModManager.Views.Controls.ExportModCollectionControlView">
  <Panel>
    <Button Content="{Binding Export}" Command="{Binding ExportCommand}"
            HorizontalAlignment="Left" MaxHeight="30" Margin="10,0,0,0"></Button>
    <Button Content="{Binding Import}" Command="{Binding ImportCommand}"
            HorizontalAlignment="Right" MaxHeight="30"  Margin="0,0,10,0"></Button>
  </Panel>
</UserControl>
