<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="40"
             x:Class="IronyModManager.Views.Controls.ExportModCollectionControlView">
  <Panel>
    <Button Content="{Binding Export}" Command="{Binding ExportCommand}"
            HorizontalAlignment="Left" MaxHeight="30" Margin="10,0,0,0"></Button>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
      <Button Content="{Binding Import}" Command="{Binding ImportCommand}" MaxHeight="30"></Button>
      <Border BorderThickness="1,1,1,1" BorderBrush="{DynamicResource IronyButtonBorderBrush}">
        <Menu>
          <MenuItem Header="{Binding ImportOtherTitle}"
                    Background="{DynamicResource IronyMidBackgroundBrush}"
                    Foreground="{DynamicResource IronyForegroundMenuBrush}" 
                    MaxHeight="30">
            <MenuItem Header="{Binding ImportOtherParadoxos}"></MenuItem>
          </MenuItem>
        </Menu>
      </Border>
    </StackPanel>
  </Panel>
</UserControl>
