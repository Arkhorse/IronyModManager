<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="30"
             MinWidth="30"
             x:Class="IronyModManager.Views.Controls.SearchModsControlView">
  <Panel>
    <TextBox Text="{Binding Text}" Watermark="{Binding WatermarkText}" HorizontalAlignment="Stretch"></TextBox>
    <Button Content="{Binding ClearText}" Command="{Binding ClearTextCommand}" HorizontalAlignment="Right"></Button>
  </Panel>
</UserControl>
